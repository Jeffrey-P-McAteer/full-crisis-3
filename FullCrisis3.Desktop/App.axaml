<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FullCrisis3.Core.ViewModels"
             xmlns:views="using:FullCrisis3.Desktop.Views"
             x:Class="FullCrisis3.Desktop.App"
             Name="FullCrisis3Desktop"
             RequestedThemeVariant="Dark">

  <!-- DataTemplates for View-ViewModel mapping -->
  <Application.DataTemplates>
    <DataTemplate DataType="vm:MainMenuViewModel">
      <views:MainMenuView />
    </DataTemplate>
    <DataTemplate DataType="vm:SubMenuViewModel">
      <views:SubMenuView />
    </DataTemplate>
  </Application.DataTemplates>

  <Application.Styles>
    <FluentTheme />
    
    <!-- Cross-Platform Fonts with Fallbacks -->
    <Style Selector="TextBlock.Title">
      <Setter Property="FontFamily" Value="Times New Roman,Liberation Serif,Times,serif" />
      <Setter Property="FontSize" Value="48" />
      <Setter Property="FontWeight" Value="Bold" />
      <Setter Property="Foreground" Value="White" />
      <Setter Property="HorizontalAlignment" Value="Center" />
      <Setter Property="Effect">
        <DropShadowEffect Color="Black" OffsetX="3" OffsetY="3" BlurRadius="8" />
      </Setter>
    </Style>
    
    <Style Selector="Button.MenuButton">
      <Setter Property="FontFamily" Value="Courier New,Liberation Mono,DejaVu Sans Mono,Consolas,monospace" />
      <Setter Property="FontSize" Value="20" />
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderBrush" Value="White" />
      <Setter Property="BorderThickness" Value="2" />
      <Setter Property="Foreground" Value="White" />
      <Setter Property="Padding" Value="20,10" />
      <Setter Property="Margin" Value="0,8" />
      <Setter Property="HorizontalAlignment" Value="Center" />
      <Setter Property="MinWidth" Value="200" />
      <Setter Property="Cursor" Value="Hand" />
      <Setter Property="Transitions">
        <Transitions>
          <BrushTransition Property="Background" Duration="0:0:0.2"/>
          <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
          <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
        </Transitions>
      </Setter>
    </Style>
    
    <!-- Focus state (mouse, keyboard, or gamepad) -->
    <Style Selector="Button.MenuButton:focus">
      <Setter Property="Background" Value="#404040" />
      <Setter Property="BorderBrush" Value="Yellow" />
      <Setter Property="Foreground" Value="Yellow" />
    </Style>
    
    <!-- Pressed state -->
    <Style Selector="Button.MenuButton:pressed">
      <Setter Property="Background" Value="#606060" />
      <Setter Property="BorderBrush" Value="White" />
      <Setter Property="Foreground" Value="White" />
    </Style>
    
    <Style Selector="TextBlock.MenuText">
      <Setter Property="FontFamily" Value="Courier New,Liberation Mono,DejaVu Sans Mono,Consolas,monospace" />
      <Setter Property="FontSize" Value="16" />
      <Setter Property="Foreground" Value="White" />
    </Style>

    <!-- Dialog Styles -->
    <Style Selector="Border.DialogOverlay">
      <Setter Property="Background" Value="#80000000" />
    </Style>
    
    <Style Selector="Border.DialogBox">
      <Setter Property="Background" Value="#2F2F2F" />
      <Setter Property="BorderBrush" Value="White" />
      <Setter Property="BorderThickness" Value="2" />
      <Setter Property="CornerRadius" Value="10" />
      <Setter Property="Padding" Value="30" />
    </Style>
    
    <Style Selector="Button.DialogButton">
      <Setter Property="FontFamily" Value="Courier New,Liberation Mono,DejaVu Sans Mono,Consolas,monospace" />
      <Setter Property="FontSize" Value="18" />
      <Setter Property="Padding" Value="15,8" />
      <Setter Property="Margin" Value="10,0" />
      <Setter Property="MinWidth" Value="120" />
    </Style>
  </Application.Styles>
</Application>