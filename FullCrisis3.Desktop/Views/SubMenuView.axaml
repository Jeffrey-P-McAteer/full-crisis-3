<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FullCrisis3.Core.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
             x:Class="FullCrisis3.Desktop.Views.SubMenuView"
             x:DataType="vm:SubMenuViewModel">

  <Design.DataContext>
    <vm:SubMenuViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,2*,*">
    
    <!-- Title -->
    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
               Text="{Binding Title}" 
               Classes="Title"
               FontSize="28"
               Margin="0,50,0,30" />
    
    <!-- Content Area -->
    <Border Grid.Row="1" Grid.Column="1"
            BorderBrush="Gray" 
            BorderThickness="2" 
            CornerRadius="5"
            Padding="20">
      
      <ScrollViewer>
        <TextBlock Text="{Binding ContentText}" 
                   Classes="MenuText" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" />
      </ScrollViewer>
    </Border>
    
    <!-- Back Button -->
    <Button Grid.Row="2" Grid.Column="0"
            Content="Back" 
            Classes="MenuButton" 
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="50,20,0,50"
            Command="{Binding BackCommand}" />
  </Grid>
</UserControl>