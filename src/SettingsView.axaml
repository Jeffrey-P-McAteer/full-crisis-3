<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FullCrisis3"
             x:Class="FullCrisis3.SettingsView"
             x:DataType="vm:SettingsViewModel">

  <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,2*,*">
    <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Settings" Classes="Title" FontSize="28" Margin="0,50,0,30" />
    
    <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="30">
      <StackPanel Spacing="25">
        
        <!-- Audio Settings Section -->
        <TextBlock Text="Audio Settings" FontSize="20" Foreground="White" FontWeight="Bold" />
        
        <StackPanel Spacing="15">
          <Grid ColumnDefinitions="*,Auto">
            <TextBlock Grid.Column="0" Text="Audio Enabled" FontSize="16" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" />
            <CheckBox x:Name="AudioEnabledCheckBox" Grid.Column="1" IsChecked="{Binding AudioEnabled}" VerticalAlignment="Center" HorizontalAlignment="Right" />
          </Grid>
          
          <Grid ColumnDefinitions="*,Auto">
            <TextBlock Grid.Column="0" Text="Background Music" FontSize="16" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" />
            <CheckBox x:Name="BackgroundMusicCheckBox" Grid.Column="1" IsChecked="{Binding BackgroundMusicEnabled}" VerticalAlignment="Center" HorizontalAlignment="Right" />
          </Grid>
        </StackPanel>
        
        <!-- Controller Section -->
        <TextBlock Text="Controller" FontSize="20" Foreground="White" FontWeight="Bold" Margin="0,20,0,0" />
        
        <StackPanel Spacing="10">
          <Grid ColumnDefinitions="Auto,*">
            <TextBlock Grid.Column="0" Text="Active Controller: " FontSize="16" Foreground="White" />
            <TextBlock Grid.Column="1" Text="{Binding ControllerName}" FontSize="16" Foreground="LightGray" />
          </Grid>
        </StackPanel>
        
        <!-- App Data Section -->
        <TextBlock Text="App Data" FontSize="20" Foreground="White" FontWeight="Bold" Margin="0,20,0,0" />
        
        <StackPanel Spacing="10">
          <TextBlock Text="Data Location:" FontSize="16" Foreground="White" />
          <TextBox Text="{Binding AppDataLocation}" FontSize="14" Foreground="LightGray" 
                   Background="Transparent" BorderThickness="1" BorderBrush="Gray"
                   IsReadOnly="True" TextWrapping="Wrap" MaxWidth="500" 
                   Padding="5" VerticalContentAlignment="Center" />
        </StackPanel>
        
      </StackPanel>
    </Border>
    
    <Button x:Name="BackButton" Grid.Row="2" Grid.Column="0" Content="Back" Classes="CustomButton BackButton" 
            HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,20,0,50" 
            Command="{Binding BackCommand}" />
  </Grid>
</UserControl>