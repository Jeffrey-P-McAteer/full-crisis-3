<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FullCrisis3"
             x:Class="FullCrisis3.SubMenuView"
             x:DataType="vm:SubMenuViewModel">

  <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,2*,*">
    <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="{Binding Title}" Classes="Title" FontSize="28" Margin="0,50,0,30" />
    
    <Border Grid.Row="1" Grid.Column="1" 
            Background="#FF2A3B47" 
            BorderBrush="#80FFFFFF" 
            BorderThickness="2" 
            CornerRadius="15" 
            Padding="30">
      <TextBlock Text="{Binding ContentText}" Foreground="White" TextWrapping="Wrap" 
                 VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Border>
    
    <Button Grid.Row="2" Grid.Column="0" Content="Back" Classes="CustomButton BackButton" 
            HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,20,0,50" 
            Command="{Binding BackCommand}" />
  </Grid>
</UserControl>