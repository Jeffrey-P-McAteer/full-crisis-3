<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FullCrisis3"
             x:Class="FullCrisis3.MainMenuView"
             x:DataType="vm:MainMenuViewModel">

  <Grid>
    <!-- Animated Background Layer -->
    <vm:AnimatedBackground />
    
    <!-- Main Menu Content -->
    <Grid RowDefinitions="*,Auto,*">
      <TextBlock Grid.Row="0" Text="Full Crisis 3" Classes="Title" VerticalAlignment="Center" />
      
      <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Spacing="15">
        <Button Name="NewGameButton" Content="New Game" Classes="CustomButton MenuButton" Command="{Binding NewGameCommand}" IsDefault="True" />
        <Button Name="LoadGameButton" Content="Load Game" Classes="CustomButton MenuButton" Command="{Binding LoadGameCommand}" />
        <Button Name="SettingsButton" Content="Settings" Classes="CustomButton MenuButton" Command="{Binding SettingsCommand}" />
        <Button Name="QuitButton" Content="Quit" Classes="CustomButton MenuButton" Command="{Binding QuitCommand}" />
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>