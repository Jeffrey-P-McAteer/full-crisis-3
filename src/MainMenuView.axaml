<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FullCrisis3"
             x:Class="FullCrisis3.MainMenuView"
             x:DataType="vm:MainMenuViewModel">

  <Grid RowDefinitions="*,Auto,*">
    <TextBlock Grid.Row="0" Text="Full Crisis 3" Classes="Title" VerticalAlignment="Center" />
    
    <!-- Menu Items Container with Border -->
    <Border Grid.Row="1" 
            Background="#FF2A3B47" 
            BorderBrush="#80FFFFFF" 
            BorderThickness="2" 
            CornerRadius="15" 
            Padding="40,30" 
            HorizontalAlignment="Center">
      <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="15">
        <Button Name="NewGameButton" Content="New Game" Background="#FF2E7D32" Classes="CustomButton MenuButton" Command="{Binding NewGameCommand}" IsDefault="True" />
        <Button Name="LoadGameButton" Content="Load Game" Background="#FF1976D2" Classes="CustomButton MenuButton" Command="{Binding LoadGameCommand}" />
        <Button Name="SettingsButton" Content="Settings" Background="#FFF57C00" Classes="CustomButton MenuButton" Command="{Binding SettingsCommand}" />
        <Button Name="QuitButton" Content="Quit" Background="#FFD32F2F" Classes="CustomButton MenuButton" Command="{Binding QuitCommand}" />
      </StackPanel>
    </Border>
  </Grid>
</UserControl>