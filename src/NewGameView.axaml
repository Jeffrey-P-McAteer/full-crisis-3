<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FullCrisis3"
             x:Class="FullCrisis3.NewGameView"
             x:DataType="vm:NewGameViewModel">

  <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,2*,*">
    <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="New Game" Classes="Title" FontSize="28" Margin="0,50,0,30" />
    
    <Border Grid.Row="1" Grid.Column="1" 
            Background="#FF2A3B47" 
            BorderBrush="#FF6B7280" 
            BorderThickness="2" 
            CornerRadius="15" 
            Padding="40">
      <StackPanel Spacing="25">
        
        <!-- Player Name Section -->
        <TextBlock Text="Character Setup" FontSize="22" Foreground="White" FontWeight="Bold" />
        
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
          <TextBlock Grid.Row="0" Grid.Column="0" Text="Character Name:" FontSize="16" Foreground="White" 
                     VerticalAlignment="Center" Margin="0,0,15,0" />
          <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding PlayerName}" FontSize="16" 
                   Background="#FF3A4D5A" Foreground="White" BorderBrush="#FF6B7280" 
                   BorderThickness="2" CornerRadius="5" Padding="10,8" 
                   Watermark="Enter your character's name..." />
          
          <TextBlock Grid.Row="1" Grid.ColumnSpan="2" 
                     Text="This name will be used throughout your story adventure."
                     FontSize="12" Foreground="#FFAAAAAA" Margin="0,5,0,0" />
        </Grid>
        
        <!-- Story Selection Section -->
        <TextBlock Text="Choose Your Story" FontSize="22" Foreground="White" FontWeight="Bold" Margin="0,20,0,0" />
        
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
          <TextBlock Grid.Row="0" Grid.Column="0" Text="Story:" FontSize="16" Foreground="White" 
                     VerticalAlignment="Center" Margin="0,0,15,0" />
          <ComboBox Grid.Row="0" Grid.Column="1" 
                    ItemsSource="{Binding AvailableStories}" 
                    SelectedItem="{Binding SelectedStory}"
                    FontSize="16" Background="#FF3A4D5A" Foreground="White" 
                    BorderBrush="#FF6B7280" BorderThickness="2" CornerRadius="5" 
                    Padding="10,8" MinHeight="40">
            <ComboBox.ItemTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Title}" />
              </DataTemplate>
            </ComboBox.ItemTemplate>
          </ComboBox>
          
          <TextBlock Grid.Row="1" Grid.ColumnSpan="2" 
                     Text="{Binding SelectedStory.Description}"
                     FontSize="14" Foreground="#FFCCCCCC" Margin="0,10,0,0" 
                     TextWrapping="Wrap" />
                     
          <TextBlock Grid.Row="2" Grid.ColumnSpan="2" 
                     Text="Each story features unique scenarios and decision-making challenges."
                     FontSize="12" Foreground="#FFAAAAAA" Margin="0,5,0,0" />
        </Grid>
        
        <!-- Action Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,30,0,0">
          <Button Grid.Column="0" Content="Play" 
                  Background="#FF2E7D32" Classes="CustomButton" 
                  FontSize="18" Padding="20,12" Margin="0,0,10,0"
                  Command="{Binding PlayGameCommand}" 
                  HorizontalAlignment="Stretch" />
          
          <Button Grid.Column="1" Content="Back" 
                  Background="#FF6B7280" Classes="CustomButton" 
                  FontSize="18" Padding="20,12" Margin="10,0,0,0"
                  Command="{Binding BackCommand}" 
                  HorizontalAlignment="Stretch" />
        </Grid>
        
      </StackPanel>
    </Border>
  </Grid>
</UserControl>